@page
@model IdentityServer.Pages.Account.ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<div class="lead">
    <h1>Reset your password</h1>k
</div>

<partial name="_ValidationSummary" />

<div class="row">
    <div class="col-sm-6">
        <div class="card">
            <div class="card-header">
                <h2>Enter your email.</h2>

            </div>

            <div class="card-body">
                <form method="post">
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" autofocus />
                    </div>
                    <button type="submit" class="w-100 btn btn-lg btn-primary">Reset Password</button>
                </form>
            </div>
        </div>
    </div>
</div>
